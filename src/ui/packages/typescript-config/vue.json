{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true
  }
}
